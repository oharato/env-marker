{
  "manifest_version": 3,
  "name": "Env Marker",
  "description": "指定したURLやIPアドレスのサイトに目印をつけます",
  "version": "1.0",
  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_title": "Env Marker",
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}